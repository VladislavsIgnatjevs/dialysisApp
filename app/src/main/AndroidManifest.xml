        <activity
            android:name=".FAQ"
            android:label="@string/faq"
            android:launchMode="singleTop" />

        <activity android:name=".EventPage"
            android:label="@string/eventDetails"
            android:launchMode="singleTop" />

        <activity android:name=".CreateEvent"
            android:label="@string/createEvent"
            android:launchMode="singleTop" />

