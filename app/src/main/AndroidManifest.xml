        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/register"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainActivity"
            android:label="@string/mainmenu"
            android:launchMode="singleTop" />
        <activity
            android:name=".Contacts"
            android:label="@string/essential_contacts"
            android:launchMode="singleTop" />
        <activity
            android:name=".MainMenu"
            android:label="@string/mainmenu"
            android:launchMode="singleTop" />
        <activity
            android:name=".CalendarEvents"
            android:label="@string/calendar"
            android:launchMode="singleTop" />
        <activity
            android:name=".calendar_events_view"
            android:label="Events"
            android:launchMode="singleTop" />
        <activity
            android:name=".DialysisCalendar"
            android:label="@string/calendar"
            android:launchMode="singleTop" />
        <activity
            android:name=".Profile"
            android:label="@string/profile"
            android:launchMode="singleTop" />
        <activity
            android:name=".Healthcheck"
            android:label="@string/healthcheck"
            android:launchMode="singleTop" />

        <activity
            android:name=".Treatment"
            android:label="@string/treatment"
