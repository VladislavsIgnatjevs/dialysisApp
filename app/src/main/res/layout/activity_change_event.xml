<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/calendar_action_bar"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="32dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"

            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:text="Update Event"
                android:id="@+id/change_event_heading"
                android:layout_width="fill_parent"
                android:layout_height="70sp"
                android:padding="10dp"
                android:textColor="@color/white"
                android:background = "@drawable/today_empty"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"

                android:gravity="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/change_event_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/add_update_event_edittext"
                android:hint="@string/hint_event_name"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/input_login"
                android:textColorHint="@color/input_login_hint" />

            <EditText
                android:id="@+id/change_event_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/add_update_event_edittext"
                android:hint="@string/hint_event_description"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/input_login"
                android:textColorHint="@color/input_login_hint" />
            <TextView
                android:id="@+id/change_event_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/add_update_event_edittext"
                android:textSize="18sp"
                android:hint="@string/hint_event_date"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/input_login"
                android:textColorHint="@color/input_login_hint" />
            <TextView
                android:id="@+id/change_event_starttime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="18sp"
                android:background="@color/add_update_event_edittext"
                android:hint="@string/hint_event_starttime"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/input_login"
                android:textColorHint="@color/input_login_hint" />
            <TextView
                android:id="@+id/change_event_endtime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="18sp"
                android:background="@color/add_update_event_edittext"
                android:hint="@string/hint_event_endname"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/input_login"
                android:textColorHint="@color/input_login_hint" />

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:shrinkColumns="1"
                android:stretchColumns="*"
                android:id="@+id/change_event_buttons">
                <TableRow>
                    <Button
                        android:id="@+id/button_change_event"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="  Update event  "
                        android:textColor="@color/white"
                        android:background="@color/add_update_event"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />

                </TableRow>
            </TableLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>