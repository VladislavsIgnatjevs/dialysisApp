<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context="vladislavsignatjevs.renaldyalisys.CalendarEvents"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >





    <LinearLayout
        android:id="@+id/buttonlayout"
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:background="@color/sky"
        android:gravity="left|top"
        android:height="60sp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/settings"
            android:layout_width="54sp"
            android:layout_height="60sp"
            android:background="@color/sky" />

        <ImageView
            android:id="@+id/prevMonth"
            android:layout_width="20sp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:src="@drawable/calendar_left_arrow_selector" >
        </ImageView>

        <TextView
            android:id="@+id/currentMonth"
            android:layout_width="fill_parent"
            android:layout_height="60sp"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" >
        </TextView>

        <ImageView
            android:id="@+id/nextMonth"
            android:layout_width="20sp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginRight="10sp"
            android:src="@drawable/calendar_right_arrow_selector" >
        </ImageView>

        <Button
            android:id="@+id/addEvent"
            android:layout_width="54sp"
            android:layout_height="60sp"
            android:background="@color/sky"
            android:text = "+"
            android:textSize = "25sp"
            android:textColor="@color/input_login_hint"
            />
    </LinearLayout>

    <Button
        android:id="@+id/selectedDayMonthYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/calendar_top_header"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" >
    </Button>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:shrinkColumns="1"
            android:stretchColumns="*"

            android:id="@+id/calendar_weekdays">
            <TableRow>
                <TextView
                    android:id="@+id/calendar_weekdays_sun"
                    android:text="Sun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:textColor="@color/lbl_name"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/calendar_weekdays_mon"
                    android:text="Mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:textColor="@color/lbl_name"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/calendar_weekdays_tue"
                    android:text="Tue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:gravity="center"
                    android:textColor="@color/lbl_name"
                    android:textSize="12sp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/calendar_weekdays_wed"
                    android:text="Wed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:textColor="@color/lbl_name"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/calendar_weekdays_thu"
                    android:text="Thu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:textColor="@color/lbl_name"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/calendar_weekdays_fri"
                    android:text="Fri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:textColor="@color/lbl_name"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/calendar_weekdays_sat"
                    android:text="Sat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:textColor="@color/lbl_name"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_gravity="center"/>
            </TableRow>


        </TableLayout>
    </LinearLayout>
    <GridView
        android:id="@+id/calendar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numColumns="7" >
    </GridView>

</LinearLayout>